<center><h2>Вход</h2></center>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "adminForm"}) do |f| %>
  <div class="field">
    <%= f.label :Почта %><br />
    <%= f.text_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :Пароль %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :Запомнить %>
    </div>
  <% end -%>

<%= button_to do %>
  <i class="fa fa-sign-in"></i>&nbspВойти
<% end %>
<% end %>

<%= link_to "Регистрация", new_registration_path(resource_name) %><br>
<%= link_to "Забыли свой пароль?", new_password_path(resource_name) %>