<div class="containerWrap">
  <div class="container">
    <div id="breadcrumbs">
      <div class="button">
        <span class="label"><%= link_to "Главная", :root, title: "Главная", class: "clearLink"%></span>
        <span class="arrow"><span></span></span>
      </div>      
      <div class="button">
        <span class="label"><%= link_to "Настройка сайта", admin_panel_url, title: "Настройка сайта", class: "clearLink"%></span>
        <span class="arrow"><span></span></span>
      </div>    
      <div class="button">
        <span class="label"><%= link_to 'Заказы', orders_path, title: 'Заказы', class: "clearLink bshow"%></span>
        <span class="arrow"><span></span></span>
      </div>    
    </div>
  </div>
</div>
<hr color="#EDEDED" noshade size="1">
<h2 style="text-align:center; margin:15px 0; color:#555555;"><i class="fa fa-angle-double-right" style="color:#00A9FE;"></i>&nbsp;Все заказы:</h2>><br>
<div class="setSitePage">

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>

</div>

<style>
.label .bshow{    
    color: black;
    line-height: 30px;
    padding: 5px;
}

.label .bshow:hover{
    color: black;
}
</style>